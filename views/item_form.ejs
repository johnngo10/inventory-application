<%- include('partials/head')%>
    <h2>New Item</h2>
    <div>
        <a href="/">Back</a>
    </div>
    <form action=<%=`/category/${categoryName}/new-item`%> method="POST">
        <fieldset>
            <label for="name">
                Name:
                <input type="text" name="name" required>
            </label>
            <label for="description">
                Description:
                <textarea name="description" id="" cols="30" rows="10" required></textarea>
            </label>
            <label for="category">
                Category
                <select name="category" id="category-dropdown">
                    <% categories.map((value) => { %>
                        <option value=<%=`${value.name}`%> <%= value.name === categoryName ? 'selected' : null %>> 
                            <%=value.name%>
                        </option>
                    <% }) %>
                </select>
            </label>
            <label for="price">
                Price
                <input type="number" name="price" value=0 step="any">
            </label>
            <label for="number_in_stock">
                Number in Stock:
                <input type="number" name="number_in_stock" value=0>
            </label>
            <label for="submit">
                <input type="submit">
            </label>
        </fieldset>
    </form>
  </body>
</html>